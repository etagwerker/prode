<h1>New forecast</h1>

<% form_for(@forecast) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :game_id %><br />
    <%= f.text_field :game_id %>
  </p>
  <p>
    <%= f.label :home_goals %><br />
    <%= f.text_field :home_goals %>
  </p>
  <p>
    <%= f.label :away_goals %><br />
    <%= f.text_field :away_goals %>
  </p>
  <p>
    <%= f.label :result %><br />
    <%= f.text_field :result %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', forecasts_path %>