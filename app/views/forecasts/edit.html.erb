<h1>Editing forecast for <%= @game.home_team %> vs. <%= @game.away_team %> on <%= @game.nice_datetime %></h1>

<% form_for(@forecast) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :home_goals, "Goals by #{@game.home_team}" %><br />
    <%= f.text_field :home_goals %>
  </p>
  <p>
    <%= f.label :away_goals, "Goals by #{@game.away_team}" %><br />
    <%= f.text_field :away_goals %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', "/#{@user.nick}/forecasts" %>