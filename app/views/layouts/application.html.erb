<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>

    <meta charset="UTF-8" />
    <title><%= t(:home_title) %></title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <!-- Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic|Maven+Pro' rel='stylesheet' type='text/css'>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

    <!-- Shortcut icon -->
    <link rel="SHORTCUT ICON" href="favicon.gif" type="image/gif" />
  </head>

  <body>
    <div id="wrapper" class="container <%= "#{controller_name}_#{action_name}" %>">
      <header class="full-width">
        <h1 class="full-width"><%= t :home_title %></h1>
        <% if current_user %>
        <ul class="nav">
          <li>
            <%= link_to "Tournaments", tournaments_path %>
          </li>
        </ul>
        <% end %>
      </header>

      <%= render 'shared/social_login' %>

      <%= yield %>

      <footer class="full-width">
        <h3 class="logo"><%= raw t :ombu_labs %></h3>
      </footer>

    </div> <!-- / #wrapper -->
  </body>
</html>
